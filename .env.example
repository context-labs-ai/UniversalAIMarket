# ============================================
# Universal AI Market - Environment Configuration
# ============================================
# Copy this file to .env and fill in the values

# === Mode ===
# localnet: Use local ZetaChain devnet (fast iteration)
# testnet: Use public testnets (Base Sepolia, Polygon Amoy, ZetaChain Athens)
MODE=localnet

# ============================================
# RPC URLs
# ============================================

# Localnet RPCs (default ports from @zetachain/localnet)
BASE_RPC=http://localhost:8545
POLYGON_RPC=http://localhost:8546
ZETA_RPC=http://localhost:8547

# Testnet RPCs (optional - for testnet mode)
BASE_SEPOLIA_RPC=https://sepolia.base.org
POLYGON_AMOY_RPC=https://rpc-amoy.polygon.technology
ZETA_ATHENS_RPC=https://zetachain-athens-evm.blockpi.network/v1/rpc/public

# ============================================
# Private Keys (NEVER COMMIT REAL KEYS!)
# ============================================

# Deployer account - needs gas on all chains
DEPLOYER_PRIVATE_KEY=0xac0974bec39a17e36ba4a6b4d238ff944bacb478cbed5efcae784d7bf4f2ff80

# Buyer account - needs USDC on Base + gas
BUYER_PRIVATE_KEY=0x59c6995e998f97a5a0044966f0945389dc9e86dae88c7a8412f4603b6b78690d

# Seller account - needs gas on Polygon
SELLER_PRIVATE_KEY=0x5de4111afa1a4b94908f83103eb1f1706367c2e68ca870fc3fb9a804cdab365a

# ============================================
# Gateway Addresses
# ============================================
# NOTE: Get these from localnet output or ZetaChain testnet docs

# EVM Gateway on Base (handles depositAndCall)
BASE_GATEWAY_ADDRESS=0x...

# EVM Gateway on Polygon (receives arbitrary calls)
POLYGON_GATEWAY_ADDRESS=0x...

# ZEVM Gateway on ZetaChain (orchestrates cross-chain)
ZETA_GATEWAY_ZEVM_ADDRESS=0x...

# ============================================
# Token Addresses
# ============================================

# USDC on Base chain
BASE_USDC_ADDRESS=0x...

# USDC decimals (standard is 6)
USDC_DECIMALS=6

# ============================================
# ZRC-20 Addresses on ZetaChain
# ============================================
# These are ZetaChain representations of external tokens

# ZRC-20 representation of Base USDC
USDC_BASE_ZRC20=0x...

# ZRC-20 gas token for Polygon (used to pay for cross-chain calls to Polygon)
POLYGON_GAS_ZRC20=0x...

# ============================================
# Deployed Contract Addresses
# ============================================
# Fill these after running deploy scripts

# UniversalMarket on ZetaChain
ZETA_UNIVERSAL_MARKET=

# MockWeaponNFT on Polygon
POLYGON_MOCK_WEAPON_NFT=

# WeaponEscrow on Polygon
POLYGON_WEAPON_ESCROW=

# ============================================
# Gas Configuration
# ============================================

# Gas limit for NFT shipment call to Polygon
SHIP_GAS_LIMIT=400000

# ============================================
# Phase 2: AI Agent Configuration (future)
# ============================================

# Alibaba DashScope API Key (for Qwen)
# DASHSCOPE_API_KEY=sk-...

# Qwen Model to use
# QWEN_MODEL=qwen-turbo

