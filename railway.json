{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "numReplicas": 1,
    "restartPolicyType": "ON_FAILURE"
  },
  "services": [
    {
      "name": "market",
      "rootDirectory": "apps/market",
      "variables": {
        "NEXT_PUBLIC_DYNAMIC_ENVIRONMENT_ID": {
          "required": true,
          "description": "Dynamic wallet environment ID"
        },
        "NEXT_PUBLIC_AGENT_UPSTREAM": {
          "required": false,
          "description": "Agent Hub internal URL (e.g., ${{agent-hub.RAILWAY_PRIVATE_DOMAIN}}:8080)"
        }
      }
    },
    {
      "name": "agent-hub",
      "rootDirectory": "apps/agent",
      "variables": {
        "OPENAI_API_KEY": {
          "required": true,
          "description": "OpenAI API key for LangChain"
        },
        "PORT": {
          "required": false,
          "default": "8080"
        }
      }
    }
  ]
}
