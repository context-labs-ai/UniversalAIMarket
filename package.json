{
  "name": "universal-ai-market",
  "version": "0.1.0",
  "description": "Cross-chain AI Agent E-commerce powered by ZetaChain Ã— Alibaba Qwen",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "clean": "hardhat clean",
    "test": "hardhat test",
    "test:coverage": "hardhat coverage",
    
    "localnet:start": "hardhat localnet",
    "localnet:stop": "hardhat localnet-stop",
    "localnet:check": "hardhat localnet-check",
    
    "deploy:local": "hardhat run scripts/deploy/deploy_local.ts --network localhost",

    "deploy:polygon:testnet": "hardhat run scripts/deploy/deploy_polygon.ts --network polygonAmoy",
    "deploy:zetachain:testnet": "hardhat run scripts/deploy/deploy_zetachain.ts --network zetaAthens",
    "deploy:all:testnet": "pnpm deploy:polygon:testnet && pnpm deploy:zetachain:testnet",

    "fund:market": "hardhat run scripts/utils/fund_market.ts --network localhost",

    "demo:phase1": "hardhat run scripts/demo/phase1_demo.ts --network localhost",
    "demo:phase1:testnet": "hardhat run scripts/demo/phase1_demo.ts --network baseSepolia",

    "web:dev": "pnpm -C apps/web dev",
    "web:build": "pnpm -C apps/web build",
    "web:lint": "pnpm -C apps/web lint",

    "agent:dev": "pnpm -C apps/agent dev",
    "agent:build": "pnpm -C apps/agent build",
    "agent:start": "pnpm -C apps/agent start",
    
    "lint": "eslint . --ext .ts",
    "format": "prettier --write ."
  },
  "keywords": [
    "zetachain",
    "cross-chain",
    "ai-agent",
    "qwen",
    "ecommerce",
    "nft",
    "hackathon"
  ],
